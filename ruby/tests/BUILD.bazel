load("//:protobuf.bzl", "ruby_proto_library")

package(
  default_visibility = ["//ruby:__subpackages__"],
)

filegroup(
  name = "tests",
  srcs = glob(["*.rb"]),
)

ruby_proto_library(
    name = "test_protos",
    srcs = [
        "basic_test.proto",
        "basic_test_proto2.proto",
        "generated_code.proto",
        "generated_code_proto2.proto",
        "multi_level_nesting_test.proto",
        "test_import.proto",
        "test_import_proto2.proto",
        "test_ruby_package.proto",
        "test_ruby_package_proto2.proto",
    ],
    proto_deps = ["//:well_known_protos"],
    includes = [".", "src"],
)
